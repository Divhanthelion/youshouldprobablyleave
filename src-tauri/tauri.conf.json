{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "wms-rust",
  "identifier": "com.warehouse.wms",
  "version": "0.1.0",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "trunk serve --port 1420",
    "beforeBuildCommand": "trunk build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Warehouse Management System",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Â© 2025 WMS Team",
    "category": "Business",
    "shortDescription": "Warehouse management system",
    "longDescription": "An offline-first warehouse management system built with Rust, Tauri v2, and WebAssembly. Features inventory management, shipping/receiving, deliveries, CRM, and timesheet modules.",
    "iOS": {
      "developmentTeam": "",
      "minimumSystemVersion": "15.0"
    },
    "android": {
      "minSdkVersion": 26
    }
  },
  "plugins": {
    "fs": {
      "scope": ["$APPDATA/**", "$DOCUMENT/**"]
    },
    "shell": {
      "open": true
    },
    "barcode-scanner": {
      "cameraEnabled": true
    },
    "biometric": {},
    "geolocation": {
      "enabled": true
    },
    "notification": {
      "all": true
    }
  }
}

